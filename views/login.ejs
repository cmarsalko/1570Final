<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pitt Login</title>
  <link rel="stylesheet" href="/login.css">
</head>
<body>

<div class="login-container">

  <div class="login-card">

    <h1>Panther Planner</h1>
    <p class="subtitle">Log in to continue</p>

    <form method="POST" action="/auth/login">

    <% if (error) { %>
        <div class="error-message" style="color: red; padding: 10px; margin-bottom: 15px; background: #fee; border-radius: 4px;">
          <%= error %>
        </div>
      <% } %>

      <label>Email</label>
      <input type="email" name="email" placeholder="yourname@pitt.edu" required>

      <label>Password</label>
      <input type="password" name="password" placeholder="Enter your password" required>

      <button type="submit" class="login-btn">Login</button>

    </form>

    <div class="divider">
      <span>OR</span>
    </div>

    <button type="button" class="passport-btn" onclick="location.href='/dashboard'">
      Login with Pitt Passport
    </button>

    <p class="signup-text">
      Don't have an account? 
      <a href="/auth/signup">Sign up here</a>
    </p>

  </div>

</div>

</body>


